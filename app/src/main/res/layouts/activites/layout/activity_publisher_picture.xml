<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wcw="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:orientation="vertical">

    <com.xunda.lib.common.common.titlebar.CustomTitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        wcw:titleBarLeftImg="@mipmap/icon_back"
        wcw:titleBarShowBottomLine="false"
        wcw:titleBarTitle="广场问答"
        wcw:titleBarRightShowFlag="VISIBLE"
        wcw:titleBarRightShowType="TEXT"
        wcw:titleBarRightTxt="发布"
        wcw:titleBarRightTxtColor="@color/text_color_1F8FE5"
        wcw:titleColor="@color/text_main_color" />


    <EditText
        android:id="@+id/et_content"
        android:layout_width="match_parent"
        android:layout_height="143dp"
        android:background="@color/white"
        android:gravity="left"
        android:hint="说点什么吧..."
        android:padding="@dimen/activity_horizontal_margin"
        android:textColor="@color/text_main_color"
        android:textColorHint="@color/text_hint_color"
        android:textSize="16sp" />

    <View style="@style/app_line" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleView_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="1dp"
        android:background="@color/white"/>


</LinearLayout>