<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.xunda.lib.common.common.titlebar.CustomTitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        app:titleBarShowBottomLine="false"
        app:titleBarLeftImg="@mipmap/icon_back"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_34"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_35"
        android:paddingRight="@dimen/dp_35">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="输入验证码"
            android:textColor="#444444"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/get_codePhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="#A1A1A1"
            android:textSize="14sp" />






    </LinearLayout>

    <com.tuo.customview.VerificationCodeView
        android:id="@+id/et_code"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_32"
        app:icv_et_bg_focus="@drawable/shape_bag_code_normal"
        app:icv_et_bg_normal="@drawable/shape_bag_code_normal"
        app:icv_et_divider_drawable="@drawable/shape_divider_code_6"
        app:icv_et_number="6"
        app:icv_et_pwd="false"
        app:icv_et_pwd_radius="@dimen/dp_5"
        app:icv_et_text_color="@color/text_color_444444"
        app:icv_et_text_size="@dimen/sp_16"
        app:icv_et_width="@dimen/dp_41"
        />

    <com.xunda.lib.common.view.CountDownTextView
        android:id="@+id/tv_getCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_11"
        android:text="@string/get_sm_code"
        android:textColor="@color/text_color_CCCCCC"
        android:textSize="@dimen/dp_10" />





</LinearLayout>