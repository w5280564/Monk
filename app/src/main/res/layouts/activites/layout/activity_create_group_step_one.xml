<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/white"
    android:orientation="vertical">

    <com.xunda.lib.common.common.titlebar.CustomTitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        app:titleBarLeftImg="@mipmap/icon_back"
        app:titleBarRightShowType="TEXT"
        app:titleBarRightShowFlag="VISIBLE"
        app:titleBarRightTxt="下一步"
        app:titleBarShowBottomLine="false"
      />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/dp_168"
        android:layout_height="@dimen/dp_168"
        android:layout_marginTop="@dimen/dp_22">
        <ImageView
            android:id="@+id/iv_header_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/bg_create_group"
            />

        <ImageView
            android:id="@+id/shangchuan"
            android:layout_width="@dimen/dp_28"
            android:layout_height="@dimen/dp_28"
            android:src="@mipmap/shangchuan"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:id="@+id/et_name"
        android:layout_width="@dimen/dp_250"
        android:layout_height="@dimen/dp_44"
        android:layout_marginTop="@dimen/dp_31"
        android:maxLength="10"
        android:hint="请输入社群名称"
        android:background="@drawable/shape_bag_square_create"
        android:gravity="center_vertical|left"
        android:paddingLeft="@dimen/dp_10"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/text_color_444444"
        android:textColorHint="@color/text_color_a1a1a1"/>






</LinearLayout>