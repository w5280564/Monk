<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.xunda.lib.common.common.titlebar.CustomTitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        app:titleBarTitle="群管理"
        app:titleBarLeftImg="@mipmap/icon_back"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_15">

        <com.xunda.lib.common.view.MyArrowItemView
            android:id="@+id/arrowItemView_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:arrowItemShowDivider="false"
            app:arrowItemTitle="加入方式"/>
        <com.xunda.lib.common.view.MyArrowItemView
            android:id="@+id/arrowItemView_manager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_14"
            app:arrowItemShowDivider="false"
            app:arrowItemTitle="群管理员" />


        <com.xunda.lib.common.view.MyArrowItemView
            android:id="@+id/arrowItemView_partner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_14"
            app:arrowItemShowDivider="false"
            app:arrowItemTitle="合伙人"/>

        <com.xunda.lib.common.view.MySwitchItemView
            android:id="@+id/theme_Switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_14"
            android:background="@color/white"
            android:paddingStart="15dp"
            app:switchItemShowDivider="false"
            app:switchItemTitle="允许用户搜索社群预览部分主题" />
    </LinearLayout>





</LinearLayout>