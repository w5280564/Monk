<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.xunda.lib.common.common.titlebar.CustomTitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        app:titleBarTitle="合伙人"
        app:titleBarLeftImg="@mipmap/icon_back"
        app:titleBarShowBottomLine="false"/>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15">

            <ImageView
                android:layout_width="@dimen/dp_56"
                android:layout_height="@dimen/dp_56"
                android:src="@mipmap/morentouxiang"
                android:layout_marginTop="@dimen/dp_42" />


            <TextView
                android:id="@+id/tv_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_9"
                android:text="添加合伙人 "
                android:textColor="@color/text_color_444444"
                android:textSize="@dimen/sp_16" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mRecycleView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_47"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:gravity="center"
                android:background="@drawable/background_bg_gray_9"
                android:layout_marginTop="87dp"
                android:layout_marginBottom="@dimen/dp_50"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="群管理可以拥有以下能力"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="• 修改群聊信息（群名称，群介绍）"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/text_color_6f6f6f"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="• 删除群成员（群主，合伙人，群管理员除外）"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/text_color_6f6f6f"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="• 审核内容"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/text_color_6f6f6f"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>



</LinearLayout>