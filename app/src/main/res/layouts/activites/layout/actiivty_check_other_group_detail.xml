<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.xunda.lib.common.common.titlebar.CustomTitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        app:titleBarTitle="社群详情"
        app:titleBarLeftImg="@mipmap/icon_back"
        app:titleBarShowBottomLine="false" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15">

                <TextView
                    android:id="@+id/tv_group_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_444444"
                    android:textSize="@dimen/sp_18"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_group_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_3"
                    android:textColor="@color/text_color_444444"
                    android:textSize="@dimen/sp_12"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@id/tv_group_name"
                    app:layout_constraintTop_toBottomOf="@id/tv_group_name" />


                <LinearLayout
                    android:id="@+id/lable_Lin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_3"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="@id/tv_group_id"
                    app:layout_constraintTop_toBottomOf="@id/tv_group_id"/>


                <ImageView
                    android:id="@+id/iv_header"
                    android:layout_width="@dimen/dp_56"
                    android:layout_height="@dimen/dp_56"
                    android:scaleType="centerCrop"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_group_name" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                style="@style/app_line"
                android:layout_marginTop="@dimen/dp_21" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dp_9">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/tv_theme_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_color_444444"
                            android:textSize="@dimen/sp_15"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="主题"
                            android:textColor="@color/text_color_a1a1a1"
                            android:textSize="@dimen/sp_10"
                            android:textStyle="bold" />

                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_member_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color_444444"
                        android:textSize="@dimen/sp_15"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="成员"
                        android:textColor="@color/text_color_a1a1a1"
                        android:textSize="@dimen/sp_10"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:orientation="vertical"
                    android:paddingRight="@dimen/dp_9">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_question_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_color_444444"
                            android:textSize="@dimen/sp_15"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="问答"
                            android:textColor="@color/text_color_a1a1a1"
                            android:textSize="@dimen/sp_10"
                            android:textStyle="bold" />

                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

            <View
                style="@style/app_line"
                android:layout_marginTop="@dimen/dp_8" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_13">

                <TextView
                    android:id="@+id/tv_jieshao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="社群介绍"
                    android:textColor="@color/text_color_444444"
                    android:textSize="@dimen/sp_15"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:lineSpacingExtra="@dimen/dp_2"
                    android:textColor="@color/text_color_6f6f6f"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintStart_toStartOf="@id/tv_jieshao"
                    app:layout_constraintTop_toBottomOf="@id/tv_jieshao" />

                <ImageView
                    android:id="@+id/iv_header_host"
                    android:layout_width="@dimen/dp_36"
                    android:layout_height="@dimen/dp_36"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="@dimen/dp_16"
                    app:layout_constraintStart_toStartOf="@id/tv_des"
                    app:layout_constraintTop_toBottomOf="@id/tv_des" />

                <TextView
                    android:id="@+id/tv_group_host_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_13"
                    android:textColor="@color/text_color_444444"
                    android:textSize="@dimen/sp_15"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/iv_header_host"
                    app:layout_constraintTop_toTopOf="@id/iv_header_host" />

                <TextView
                    android:id="@+id/tv_create_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_6f6f6f"
                    android:textSize="@dimen/sp_10"
                    app:layout_constraintBottom_toBottomOf="@id/iv_header_host"
                    app:layout_constraintStart_toStartOf="@id/tv_group_host_name" />

                <TextView
                    android:id="@+id/tv_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="付费须知"
                    android:textColor="@color/text_color_444444"
                    android:textSize="@dimen/sp_15"
                    app:layout_constraintStart_toStartOf="@id/iv_header_host"
                    app:layout_constraintTop_toBottomOf="@id/iv_header_host" />

                <TextView
                    android:id="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_15"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_label" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                style="@style/app_line"
                android:layout_marginTop="@dimen/dp_8" />

            <TextView
                android:id="@+id/tv_pay_notice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:lineSpacingExtra="@dimen/dp_2"
                android:textColor="@color/text_color_6f6f6f"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:text="部分主题预览"
                android:textColor="@color/text_color_444444"
                android:textSize="@dimen/sp_15"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                style="@style/app_line"
                android:layout_marginTop="@dimen/dp_7" />

            <LinearLayout
                android:id="@+id/ll_container_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <View style="@style/app_line" />

    <RelativeLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_63"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tv_fee_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/text_color_1F8FE5" />

        <TextView
            android:id="@+id/tv_join"
            android:layout_width="128dp"
            android:layout_height="@dimen/dp_44"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_btn_rectangle"
            android:gravity="center"
            android:text="立即加入"
            android:textColor="@color/text_color_444444"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>

</LinearLayout>