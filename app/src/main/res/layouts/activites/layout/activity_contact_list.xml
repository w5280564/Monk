<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.xunda.lib.common.common.titlebar.CustomTitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        app:layout_constraintTop_toTopOf="parent"
        app:titleBarLeftImg="@mipmap/icon_back"
        app:titleBarShowBottomLine="false"
        app:titleBarTitle="好友" />

    <LinearLayout
        android:id="@+id/seek_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_29"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@drawable/search_bg"
        android:gravity="center"
        android:text="搜索好友"
        app:layout_constraintTop_toBottomOf="@id/title_bar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/seek_icon"
            android:drawablePadding="@dimen/dp_9"
            android:text="搜索好友" />


    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@id/seek_ll"
        app:layout_constraintVertical_weight="1" >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/group_dialog"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_toast"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:visibility="invisible" />

        <com.xunda.lib.common.view.SideBar
            android:id="@+id/sidrbar"
            android:layout_width="@dimen/dp_35"
            android:layout_height="match_parent"
            android:layout_gravity="right|center"/>
    </FrameLayout>





</androidx.constraintlayout.widget.ConstraintLayout>