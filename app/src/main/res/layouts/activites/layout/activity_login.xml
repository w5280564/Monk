<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:layout_width="@dimen/dp_56"
        android:layout_height="@dimen/dp_56"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="127dp"
        android:src="@drawable/app_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_11"
        android:text="发现扫地僧"
        android:textColor="@color/text_color_444444"
        android:textSize="@dimen/sp_20" />

    <LinearLayout
        android:id="@+id/ll_wechat_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_marginLeft="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_104"
        android:layout_marginRight="@dimen/dp_35"
        android:background="@drawable/selector_btn_rectangle_green"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/icon_weixin"
            android:drawablePadding="@dimen/dp_21"
            android:text="微信登录"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_phone_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_marginLeft="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_35"
        android:background="@drawable/selector_btn_rectangle"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/icon_shouji"
            android:drawablePadding="@dimen/dp_21"
            android:text="手机登录"
            android:textColor="@color/text_color_444444"
            android:textSize="@dimen/sp_16" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_118"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:background="@null"
            android:paddingLeft="@dimen/dp_8"
            android:text="登录即表示同意"
            android:textColor="@color/text_color_444444"
            android:button="@drawable/checkbox_agreement"
            android:textSize="12sp"/>


        <TextView
            android:id="@+id/tv_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《扫地僧用户协议》"
            android:textColor="@color/text_color_1F8FE5"
            android:textSize="@dimen/sp_12" />

    </LinearLayout>


</LinearLayout>
