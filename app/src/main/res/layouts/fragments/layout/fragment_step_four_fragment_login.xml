<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15">


    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_21"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_header"
            android:layout_width="@dimen/dp_56"
            android:layout_height="@dimen/dp_56"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_11"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_nickName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hi!羊羊"
                android:textColor="@color/text_color_444444"
                android:textSize="@dimen/sp_20"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:text="欢迎光临!"
                android:textColor="@color/text_color_a1a1a1"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/ll_top"
        android:layout_marginTop="@dimen/dp_23"
        android:background="@drawable/base_gradual"
        android:paddingLeft="@dimen/dp_14"
        android:paddingTop="@dimen/dp_11"
        android:paddingRight="@dimen/dp_14"
        android:paddingBottom="@dimen/dp_11">

        <EditText
            android:id="@+id/et_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入文字！"
            android:lineSpacingExtra="@dimen/dp_3"
            android:maxLength="200"
            android:textColor="#6F6F6F"
            android:textSize="@dimen/sp_14" />


        <TextView
            android:id="@+id/tv_description_toast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:text="最少20个字（0/200）"
            android:textColor="@color/text_color_a1a1a1"
            android:textSize="@dimen/sp_10" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_48"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="@dimen/dp_63"
            android:layout_height="@dimen/dp_44"
            android:background="@drawable/base_gradual"
            android:gravity="center"
            android:text="返回"
            android:textColor="@color/text_color_444444"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_save"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginLeft="@dimen/dp_11"
            android:background="@drawable/selector_btn_rectangle"
            android:gravity="center"
            android:text="完成"
            android:textColor="@color/text_color_444444"
            android:textSize="@dimen/sp_16" />


    </LinearLayout>


</RelativeLayout>
