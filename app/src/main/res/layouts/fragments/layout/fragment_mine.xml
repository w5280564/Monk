<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:orientation="vertical">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_background_white_radius12"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_user"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/dp_15"
                        android:paddingTop="@dimen/dp_40"
                        android:paddingEnd="@dimen/dp_15">

                        <ImageView
                            android:id="@+id/iv_userHeader"
                            android:layout_width="@dimen/dp_56"
                            android:layout_height="@dimen/dp_56"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/icon_logo_round"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_7"
                            android:layout_marginEnd="@dimen/dp_10"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="阿羊G"
                            android:textColor="@color/text_color_444444"
                            android:textSize="@dimen/sp_18"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toStartOf="@+id/iv_qrcode"
                            app:layout_constraintStart_toEndOf="@+id/iv_userHeader"
                            app:layout_constraintTop_toTopOf="@+id/iv_userHeader" />


                        <TextView
                            android:id="@+id/tv_level"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_14"
                            android:layout_marginTop="@dimen/dp_10"
                            android:background="@drawable/background_tag_level"
                            android:gravity="center"
                            android:paddingLeft="@dimen/dp_3"
                            android:paddingRight="@dimen/dp_3"
                            android:text="大V"
                            android:textColor="@color/text_color_ff5b29"
                            android:textSize="@dimen/sp_10"
                            app:layout_constraintStart_toStartOf="@+id/tv_name"
                            app:layout_constraintTop_toBottomOf="@+id/tv_name" />

                        <TextView
                            android:id="@+id/tv_position"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_14"
                            android:layout_marginStart="@dimen/dp_7"
                            android:layout_marginLeft="@dimen/dp_7"
                            android:layout_marginTop="@dimen/dp_10"
                            android:background="@drawable/background_tag_position"
                            android:gravity="center"
                            android:paddingLeft="@dimen/dp_3"
                            android:paddingRight="@dimen/dp_3"
                            android:text="私募经理"
                            android:textColor="@color/text_color_1F8FE5"
                            android:textSize="@dimen/sp_10"
                            app:layout_constraintStart_toEndOf="@+id/tv_level"
                            app:layout_constraintTop_toBottomOf="@+id/tv_name" />

                        <ImageView
                            android:id="@+id/iv_right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/icon_youjiantou"
                            app:layout_constraintBottom_toBottomOf="@+id/iv_userHeader"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/iv_userHeader" />

                        <TextView
                            android:id="@+id/iv_qrcode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/dp_10"
                            android:text="进入我的主页"
                            android:textColor="@color/text_color_a1a1a1"
                            android:textSize="@dimen/sp_10"
                            app:layout_constraintBottom_toBottomOf="@+id/iv_right"
                            app:layout_constraintEnd_toStartOf="@+id/iv_right"
                            app:layout_constraintTop_toTopOf="@+id/iv_right" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_15"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/dp_15"
                        android:paddingBottom="@dimen/dp_15">

                        <LinearLayout
                            android:id="@+id/ll_follow"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_follow_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1234"
                                android:textColor="@color/text_color_444444"
                                android:textSize="@dimen/sp_15"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_8"
                                android:text="关注"
                                android:textColor="@color/text_color_a1a1a1"
                                android:textSize="@dimen/sp_12"
                                android:textStyle="bold" />

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/ll_fans"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_fans_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5678"
                                android:textColor="@color/text_color_444444"
                                android:textSize="@dimen/sp_15"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_8"
                                android:text="粉丝"
                                android:textColor="@color/text_color_a1a1a1"
                                android:textSize="@dimen/sp_12"
                                android:textStyle="bold" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/shape_background_white_radius12"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/dp_18"
                        android:paddingBottom="@dimen/dp_15">

                        <TextView
                            android:id="@+id/tv_my_wallet"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableTop="@mipmap/qianbao"
                            android:drawablePadding="@dimen/dp_10"
                            android:gravity="center"
                            android:text="我的钱包"
                            android:textColor="@color/text_color_a1a1a1"
                            android:textSize="@dimen/sp_12"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/tv_comment"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableTop="@mipmap/punlun"
                            android:drawablePadding="@dimen/dp_10"
                            android:gravity="center"
                            android:text="评论"
                            android:textColor="@color/text_color_a1a1a1"
                            android:textSize="@dimen/sp_12"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_view"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableTop="@mipmap/liulan"
                            android:drawablePadding="@dimen/dp_10"
                            android:gravity="center"
                            android:text="浏览"
                            android:textColor="@color/text_color_a1a1a1"
                            android:textSize="@dimen/sp_12"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_about"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableTop="@mipmap/guanyu"
                            android:drawablePadding="@dimen/dp_10"
                            android:gravity="center"
                            android:text="关于"
                            android:textColor="@color/text_color_a1a1a1"
                            android:textSize="@dimen/sp_12"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/dp_18"
                        android:paddingBottom="@dimen/dp_15">

                        <TextView
                            android:id="@+id/tv_fankui"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableTop="@mipmap/fankui2"
                            android:drawablePadding="@dimen/dp_10"
                            android:gravity="center"
                            android:text="帮助反馈"
                            android:textColor="@color/text_color_a1a1a1"
                            android:textSize="@dimen/sp_12"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_shezhi"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableTop="@mipmap/shezhi2"
                            android:drawablePadding="@dimen/dp_10"
                            android:gravity="center"
                            android:text="设置中心"
                            android:textColor="@color/text_color_a1a1a1"
                            android:textSize="@dimen/sp_12"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableTop="@mipmap/guanyu"
                            android:drawablePadding="@dimen/dp_10"
                            android:gravity="center" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableTop="@mipmap/guanyu"
                            android:drawablePadding="@dimen/dp_10"
                            android:gravity="center" />


                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="@dimen/dp_4"
                        android:layout_height="@dimen/dp_15"
                        android:background="@drawable/shape_line_vertical"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_7"
                        android:gravity="center"
                        android:text="创作中心"
                        android:textStyle="bold"
                        android:textColor="@color/text_color_444444"
                        android:textSize="@dimen/sp_15" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@drawable/shape_background_white_radius12"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/dp_18"
                        android:paddingBottom="@dimen/dp_15">

                        <TextView
                            android:id="@+id/tv_fabu"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableTop="@mipmap/fabu"
                            android:drawablePadding="@dimen/dp_10"
                            android:gravity="center"
                            android:text="创作发布"
                            android:textColor="@color/text_color_a1a1a1"
                            android:textSize="@dimen/sp_12"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_caogao"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableTop="@mipmap/caogao"
                            android:drawablePadding="@dimen/dp_10"
                            android:gravity="center"
                            android:text="草稿箱"
                            android:textColor="@color/text_color_a1a1a1"
                            android:textSize="@dimen/sp_12"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_dongtai"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableTop="@mipmap/dongtai"
                            android:drawablePadding="@dimen/dp_10"
                            android:gravity="center"
                            android:text="我的动态"
                            android:textColor="@color/text_color_a1a1a1"
                            android:textSize="@dimen/sp_12"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_group"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableTop="@mipmap/sheuqn"
                            android:drawablePadding="@dimen/dp_10"
                            android:gravity="center"
                            android:text="我的社群"
                            android:textColor="@color/text_color_a1a1a1"
                            android:textSize="@dimen/sp_12"
                            android:textStyle="bold" />


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:background="@drawable/shape_background_white_radius12"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/dp_15"></LinearLayout>


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</LinearLayout>