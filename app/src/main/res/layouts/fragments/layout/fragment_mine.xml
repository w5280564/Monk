<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:orientation="vertical">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="MissingConstraints">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/base_gradual_bottom"
                    android:paddingStart="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_40"
                    android:paddingEnd="@dimen/dp_15"
                    android:paddingBottom="@dimen/dp_15"
                    tools:ignore="MissingConstraints">

                    <ImageView
                        android:id="@+id/iv_userHeader"
                        android:layout_width="@dimen/dp_56"
                        android:layout_height="@dimen/dp_56"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/icon_logo_round"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_7"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:maxLength="6"
                        android:textColor="@color/text_color_444444"
                        android:textSize="@dimen/sp_18"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@+id/iv_qrcode"
                        app:layout_constraintStart_toEndOf="@+id/iv_userHeader"
                        app:layout_constraintTop_toTopOf="@+id/iv_userHeader" />


                    <LinearLayout
                        android:id="@+id/label_Lin"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginEnd="@dimen/dp_15"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="@dimen/dp_10"
                        app:layout_constraintStart_toEndOf="@+id/iv_userHeader"
                        app:layout_constraintTop_toBottomOf="@+id/tv_name" />


                    <ImageView
                        android:id="@+id/iv_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_youjiantou"
                        app:layout_constraintBottom_toBottomOf="@+id/iv_userHeader"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/iv_userHeader" />

                    <TextView
                        android:id="@+id/iv_qrcode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:text="进入我的主页"
                        android:textColor="@color/text_color_a1a1a1"
                        android:textSize="@dimen/sp_10"
                        app:layout_constraintBottom_toBottomOf="@+id/iv_right"
                        app:layout_constraintEnd_toStartOf="@+id/iv_right"
                        app:layout_constraintTop_toTopOf="@+id/iv_right" />

                    <TextView
                        android:id="@+id/tv_follow_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_24"
                        android:layout_marginTop="@dimen/dp_30"
                        android:textColor="@color/text_color_444444"
                        android:textSize="@dimen/sp_15"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/iv_userHeader" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="关注"
                        android:textColor="@color/text_color_a1a1a1"
                        android:textSize="@dimen/sp_12"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="@+id/tv_follow_number"
                        app:layout_constraintStart_toStartOf="@+id/tv_follow_number"
                        app:layout_constraintTop_toBottomOf="@+id/tv_follow_number" />


                    <TextView
                        android:id="@+id/tv_fans_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_60"
                        android:textColor="@color/text_color_444444"
                        android:textSize="@dimen/sp_15"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@id/tv_follow_number"
                        app:layout_constraintStart_toEndOf="@id/tv_follow_number"
                        app:layout_constraintTop_toTopOf="@id/tv_follow_number" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="粉丝"
                        android:textColor="@color/text_color_a1a1a1"
                        android:textSize="@dimen/sp_12"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="@+id/tv_fans_number"
                        app:layout_constraintStart_toStartOf="@+id/tv_fans_number"
                        app:layout_constraintTop_toBottomOf="@+id/tv_fans_number" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/set_Con"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/base_gradual"
                    android:paddingTop="@dimen/dp_15"
                    android:paddingBottom="@dimen/dp_15"
                    app:layout_constraintTop_toBottomOf="@id/cl_user">

                    <TextView
                        android:id="@+id/tv_my_wallet"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:drawableTop="@mipmap/qianbao"
                        android:drawablePadding="@dimen/dp_10"
                        android:gravity="center"
                        android:text="钱包"
                        android:textColor="@color/text_color_a1a1a1"
                        android:textSize="@dimen/sp_12"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@id/tv_comment"
                        app:layout_constraintStart_toStartOf="parent" />


                    <TextView
                        android:id="@+id/tv_comment"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:drawableTop="@mipmap/punlun"
                        android:drawablePadding="@dimen/dp_10"
                        android:gravity="center"
                        android:text="评论"
                        android:textColor="@color/text_color_a1a1a1"
                        android:textSize="@dimen/sp_12"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@id/tv_view"
                        app:layout_constraintStart_toEndOf="@+id/tv_my_wallet" />

                    <TextView
                        android:id="@+id/tv_view"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:drawableTop="@mipmap/liulan"
                        android:drawablePadding="@dimen/dp_10"
                        android:gravity="center"
                        android:text="浏览"
                        android:textColor="@color/text_color_a1a1a1"
                        android:textSize="@dimen/sp_12"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@id/tv_fankui"
                        app:layout_constraintStart_toEndOf="@id/tv_comment" />


                    <TextView
                        android:id="@+id/tv_fankui"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:drawableTop="@mipmap/fankui2"
                        android:drawablePadding="@dimen/dp_10"
                        android:gravity="center"
                        android:text="帮助反馈"
                        android:textColor="@color/text_color_a1a1a1"
                        android:textSize="@dimen/sp_12"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tv_view" />


                    <TextView
                        android:id="@+id/tv_shezhi"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_20"
                        android:drawableTop="@mipmap/shezhi2"
                        android:drawablePadding="@dimen/dp_10"
                        android:gravity="center"
                        android:text="设置中心"
                        android:textColor="@color/text_color_a1a1a1"
                        android:textSize="@dimen/sp_12"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="@+id/tv_my_wallet"
                        app:layout_constraintStart_toStartOf="@+id/tv_my_wallet"
                        app:layout_constraintTop_toBottomOf="@+id/tv_my_wallet" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:id="@+id/view4"
                    android:layout_width="@dimen/dp_4"
                    android:layout_height="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@drawable/shape_line_vertical"
                    app:layout_constraintTop_toBottomOf="@id/set_Con" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_7"
                    android:gravity="center"
                    android:text="创作中心"
                    android:textColor="@color/text_color_444444"
                    android:textSize="@dimen/sp_15"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/view4"
                    app:layout_constraintStart_toEndOf="@+id/view4"
                    app:layout_constraintTop_toTopOf="@id/view4" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/group_Con"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@drawable/base_gradual"
                    android:paddingTop="@dimen/dp_15"
                    android:paddingBottom="@dimen/dp_15"
                    app:layout_constraintTop_toBottomOf="@id/view4">

                    <TextView
                        android:id="@+id/tv_fabu"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:drawableTop="@mipmap/fabu"
                        android:drawablePadding="@dimen/dp_10"
                        android:gravity="center"
                        android:text="创作发布"
                        android:textColor="@color/text_color_a1a1a1"
                        android:textSize="@dimen/sp_12"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@id/tv_caogao"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/tv_caogao"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:drawableTop="@mipmap/caogao"
                        android:drawablePadding="@dimen/dp_10"
                        android:gravity="center"
                        android:text="草稿箱"
                        android:textColor="@color/text_color_a1a1a1"
                        android:textSize="@dimen/sp_12"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@id/tv_dongtai"
                        app:layout_constraintStart_toEndOf="@id/tv_fabu" />

                    <TextView
                        android:id="@+id/tv_dongtai"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:drawableTop="@mipmap/dongtai"
                        android:drawablePadding="@dimen/dp_10"
                        android:gravity="center"
                        android:text="我的动态"
                        android:textColor="@color/text_color_a1a1a1"
                        android:textSize="@dimen/sp_12"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@id/tv_group"
                        app:layout_constraintStart_toEndOf="@id/tv_caogao" />

                    <TextView
                        android:id="@+id/tv_group"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:drawableTop="@mipmap/sheuqn"
                        android:drawablePadding="@dimen/dp_10"
                        android:gravity="center"
                        android:text="我的社群"
                        android:textColor="@color/text_color_a1a1a1"
                        android:textSize="@dimen/sp_12"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tv_dongtai" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:background="@drawable/base_gradual"
                    android:paddingBottom="@dimen/dp_15"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/group_Con">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_15"
                        android:drawableLeft="@mipmap/xingqu"
                        android:drawablePadding="@dimen/dp_10"
                        android:text="我对这些感兴趣"
                        android:textColor="@color/text_color_6f6f6f"
                        android:textSize="15sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.xunda.lib.common.view.flowlayout.FlowLayout
                        android:id="@+id/interest_Flow"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_42"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginEnd="@dimen/dp_15"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView7" />

                    <View
                        android:id="@+id/label_Line"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_1"
                        android:layout_marginTop="@dimen/dp_13"
                        app:layout_constraintEnd_toEndOf="@+id/interest_Flow"
                        app:layout_constraintStart_toStartOf="@id/interest_Flow"
                        app:layout_constraintTop_toBottomOf="@id/interest_Flow" />


                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_15"
                        android:drawableLeft="@mipmap/shanchang"
                        android:drawablePadding="@dimen/dp_10"
                        android:text="擅长领域/方向"
                        android:textColor="@color/text_color_6f6f6f"
                        android:textSize="15sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/label_Line" />

                    <TextView
                        android:id="@+id/good_Tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_42"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginEnd="@dimen/dp_15"
                        android:text="暂未填写"
                        android:textColor="@color/text_color_a1a1a1"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView11" />

                    <View
                        android:id="@+id/good_Line"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_1"
                        android:layout_marginTop="@dimen/dp_13"
                        app:layout_constraintEnd_toEndOf="@+id/good_Tv"
                        app:layout_constraintStart_toStartOf="@id/good_Tv"
                        app:layout_constraintTop_toBottomOf="@id/good_Tv" />

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_15"
                        android:drawableLeft="@mipmap/ziyuan"
                        android:drawablePadding="@dimen/dp_10"
                        android:text="可以提供什么资源/可以问我"
                        android:textColor="@color/text_color_6f6f6f"
                        android:textSize="15sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/good_Line" />

                    <TextView
                        android:id="@+id/resources_Tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_42"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginEnd="@dimen/dp_15"
                        android:text="暂未填写"
                        android:textColor="@color/text_color_a1a1a1"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView12" />

                    <View
                        android:id="@+id/resources_Line"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_1"
                        android:layout_marginTop="@dimen/dp_13"
                        app:layout_constraintEnd_toEndOf="@+id/resources_Tv"
                        app:layout_constraintStart_toStartOf="@id/resources_Tv"
                        app:layout_constraintTop_toBottomOf="@id/resources_Tv" />

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_15"
                        android:drawableLeft="@mipmap/yanjiu"
                        android:drawablePadding="@dimen/dp_10"
                        android:text="最有成就感的事"
                        android:textColor="@color/text_color_6f6f6f"
                        android:textSize="15sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/resources_Line" />

                    <TextView
                        android:id="@+id/achievement_Tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_42"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginEnd="@dimen/dp_15"
                        android:text="暂未填写"
                        android:textColor="@color/text_color_a1a1a1"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView13" />

                    <View
                        android:id="@+id/achievement_Line"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_1"
                        android:layout_marginTop="@dimen/dp_13"
                        app:layout_constraintEnd_toEndOf="@+id/achievement_Tv"
                        app:layout_constraintStart_toStartOf="@id/achievement_Tv"
                        app:layout_constraintTop_toBottomOf="@id/achievement_Tv" />

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_15"
                        android:drawableLeft="@mipmap/xuexi"
                        android:drawablePadding="@dimen/dp_10"
                        android:text="最近在学习/研究的方向"
                        android:textColor="@color/text_color_6f6f6f"
                        android:textSize="15sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/achievement_Line" />
                    <TextView
                        android:id="@+id/learn_Tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_42"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginEnd="@dimen/dp_15"
                        android:text="暂未填写"
                        android:textColor="@color/text_color_a1a1a1"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView14" />
                    <View
                        android:id="@+id/learn_Line"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_1"
                        android:layout_marginTop="@dimen/dp_13"
                        app:layout_constraintEnd_toEndOf="@+id/learn_Tv"
                        app:layout_constraintStart_toStartOf="@id/learn_Tv"
                        app:layout_constraintTop_toBottomOf="@id/learn_Tv" />

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_15"
                        android:drawableLeft="@mipmap/shouhuo"
                        android:drawablePadding="@dimen/dp_10"
                        android:text="希望收获什么/需求资源"
                        android:textColor="@color/text_color_6f6f6f"
                        android:textSize="15sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/learn_Line" />
                    <TextView
                        android:id="@+id/harvest_Tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_42"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginEnd="@dimen/dp_15"
                        android:text="暂未填写"
                        android:textColor="@color/text_color_a1a1a1"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView15" />
                    <View
                        android:id="@+id/harvest_Line"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_1"
                        android:layout_marginTop="@dimen/dp_13"
                        app:layout_constraintEnd_toEndOf="@+id/harvest_Tv"
                        app:layout_constraintStart_toStartOf="@id/harvest_Tv"
                        app:layout_constraintTop_toBottomOf="@id/harvest_Tv" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</LinearLayout>