<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/qusetion_Constraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        tools:ignore="MissingConstraints">


        <TextView
            android:id="@+id/questionone_txt"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:text="商业/金融"
            android:textColor="@color/text_color_444444"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/arrow_img"
            android:layout_width="12dp"
            android:layout_height="7dp"
            android:layout_marginEnd="15dp"
            android:src="@mipmap/topic_down"
            app:layout_constraintBottom_toBottomOf="@+id/questionone_txt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/questionone_txt" />


        <LinearLayout
            android:id="@+id/choice_lin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/questionone_txt"
            android:layout_below="@id/questionone_txt"
            android:orientation="vertical" />

    </androidx.constraintlayout.widget.ConstraintLayout>





</LinearLayout>