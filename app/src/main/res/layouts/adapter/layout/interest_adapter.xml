<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10"
    android:background="@color/white"
    tools:ignore="MissingConstraints">

    <ImageView
        android:id="@+id/head_Img"
        android:layout_width="@dimen/dp_36"
        android:layout_height="@dimen/dp_36"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Interest_Name"
        android:layout_width="96dp"
        android:layout_height="22dp"
        android:layout_marginStart="@dimen/dp_9"
        android:textColor="@color/text_color_6f6f6f"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/head_Img"
        app:layout_constraintTop_toTopOf="@+id/head_Img" />

    <TextView
        android:id="@+id/add_Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_6"
        android:textColor="@color/text_color_a1a1a1"
        android:textSize="9sp"
        android:lines="1"
        android:gravity="center"
        android:paddingStart="@dimen/dp_5"
        android:paddingEnd="@dimen/dp_5"
        android:background="@drawable/search_bg"
        app:layout_constraintStart_toStartOf="@+id/Interest_Name"
        app:layout_constraintTop_toBottomOf="@+id/Interest_Name"/>

    <TextView
        android:id="@+id/content_Tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_62"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginEnd="@dimen/dp_15"
        android:lines="3"
        android:textColor="@color/text_color_a1a1a1"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dp_10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_Tv" />


    <com.xunda.lib.common.view.discussionavatarview.DiscussionAvatarView
        android:id="@+id/headListView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_40"
        app:isLastComplete="true"
        app:isShowAnimation="true"
        app:layout_constraintBottom_toBottomOf="@+id/add_Tv"
        app:layout_constraintEnd_toStartOf="@+id/join_Tv"
        app:layout_constraintStart_toEndOf="@+id/add_Tv"
        app:layout_constraintTop_toTopOf="@+id/add_Tv"
        app:radius="9"
        app:space="0.8" />

    <TextView
        android:id="@+id/join_Tv"
        android:layout_width="@dimen/dp_46"
        android:layout_height="@dimen/dp_22"
        android:background="@drawable/interest_lable"
        android:gravity="center"
        android:lines="1"
        android:text="已加入"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_15"
        android:textColor="@color/text_color_a1a1a1"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>