<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/manager_Con"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_white_shape"
    android:elevation="@dimen/dp_1"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginStart="@dimen/dp_15"
    android:layout_marginEnd="@dimen/dp_15"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="@dimen/dp_18"
    tools:ignore="MissingConstraints">


    <ImageView
        android:id="@+id/head_Img"
        android:layout_width="@dimen/dp_56"
        android:layout_height="@dimen/dp_56"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_19"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nickName_Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_19"
        android:textColor="@color/text_color_444444"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/head_Img"
        app:layout_constraintTop_toTopOf="@+id/head_Img" />


    <com.xunda.lib.common.view.flowlayout.FlowLayout
        android:id="@+id/lable_flow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/nickName_Tv"
        app:layout_constraintTop_toBottomOf="@+id/nickName_Tv" />


    <TextView
        android:id="@+id/allTime_Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:maxLines="1"
        android:textColor="@color/text_color_6f6f6f"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/head_Img" />

    <TextView
        android:id="@+id/startTime_Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5"
        android:maxLines="1"
        android:textColor="@color/text_color_6f6f6f"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/allTime_Tv" />



    <TextView
        android:id="@+id/content_Tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_9"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_9"
        android:maxLines="3"
        android:textColor="@color/text_color_a1a1a1"
        android:textSize="12sp"
        android:layout_marginBottom="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/startTime_Tv" />

</androidx.constraintlayout.widget.ConstraintLayout>