<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Insider_Con"
    android:layout_width="@dimen/dp_280"
    android:layout_height="385dp"
    android:background="@drawable/interest_lable"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:ignore="MissingConstraints">

    <!--    <com.qingbo.monk.Slides.base.RoundIma-->
    <!--        android:id="@+id/round_Img"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="@dimen/dp_250"-->
    <!--        android:scaleType="centerCrop"-->
    <!--        android:visibility="gone"-->
    <!--        app:round_radius="@dimen/dp_10" />-->


    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_250"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/nickName_Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eelisa"
        android:textColor="@color/text_color_444444"
        android:textSize="17sp"
        android:maxLength="6"
        android:layout_marginStart="@dimen/dp_17"
        android:layout_marginTop="@dimen/dp_23"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image" />

    <TextView
        android:id="@+id/city_Tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="北京"
        android:layout_marginStart="@dimen/dp_20"
        android:textColor="@color/text_color_444444"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/nickName_Tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/nickName_Tv"
        app:layout_constraintTop_toTopOf="@+id/nickName_Tv" />

    <ImageButton
        android:id="@+id/left"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="4dp"
        android:alpha="0"
        android:scaleType="centerInside"
        android:src="@mipmap/chacha" />

    <ImageButton
        android:id="@+id/right"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="left|center_vertical"
        android:layout_marginLeft="4dp"
        android:alpha="0"
        android:scaleType="centerInside"
        android:src="@mipmap/chacha" />

    <ImageButton
        android:id="@+id/up"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="4dp"
        android:alpha="0"
        android:scaleType="centerInside"
        android:src="@mipmap/chacha" />

    <ImageButton
        android:id="@+id/down"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="4dp"
        android:alpha="0"
        android:scaleType="centerInside"
        android:src="@mipmap/chacha" />

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#212121"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>