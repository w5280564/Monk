<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Insider_Con"
    android:layout_width="224dp"
    android:layout_height="297dp"
    android:background="@drawable/base_gradual"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:ignore="MissingConstraints">

    <!--    <com.qingbo.monk.Slides.base.RoundIma-->
    <!--        android:id="@+id/round_Img"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="@dimen/dp_250"-->
    <!--        android:scaleType="centerCrop"-->
    <!--        android:visibility="gone"-->
    <!--        app:round_radius="@dimen/dp_10" />-->


    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/dp_72"
        android:layout_height="@dimen/dp_72"
        android:scaleType="fitXY"
        android:layout_marginTop="@dimen/dp_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/nickName_Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_70"
        android:layout_marginTop="@dimen/dp_23"
        android:maxLength="6"
        android:textColor="@color/text_color_444444"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image" />

    <TextView
        android:id="@+id/city_Tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:textColor="@color/text_color_444444"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/nickName_Tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/nickName_Tv"
        app:layout_constraintTop_toTopOf="@+id/nickName_Tv" />

    <LinearLayout
        android:id="@+id/lable_Lin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nickName_Tv" />


    <TextView
        android:id="@+id/content_Tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_22"
        android:layout_marginEnd="@dimen/dp_22"
        android:textColor="@color/text_color_6f6f6f"
        android:layout_marginTop="@dimen/dp_8"
        android:textSize="12sp"
        android:maxLines="6"
        android:ellipsize="end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lable_Lin" />

    <ImageButton
        android:id="@+id/left"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="4dp"
        android:alpha="0"
        android:visibility="invisible"
        android:scaleType="centerInside"
        android:src="@mipmap/chacha" />


    <ImageButton
        android:id="@+id/right"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="left|center_vertical"
        android:layout_marginLeft="4dp"
        android:visibility="invisible"
        android:alpha="0"
        android:scaleType="centerInside"
        android:src="@mipmap/chacha" />

    <ImageButton
        android:id="@+id/up"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="4dp"
        android:visibility="invisible"
        android:alpha="0"
        android:scaleType="centerInside"
        android:src="@mipmap/chacha" />

    <ImageButton
        android:id="@+id/down"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="4dp"
        android:alpha="0"
        android:visibility="invisible"
        android:scaleType="centerInside"
        android:src="@mipmap/chacha" />


</androidx.constraintlayout.widget.ConstraintLayout>