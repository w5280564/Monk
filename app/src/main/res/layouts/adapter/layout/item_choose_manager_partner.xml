<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_15"
    android:orientation="vertical"
    android:gravity="center_vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@color/text_color_F5F5F5"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_5"
        android:textColor="@color/text_color_6f6f6f"
        android:textSize="@dimen/sp_10"
        android:textStyle="bold"
        android:text="A"
        android:visibility="visible" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <CheckBox
            android:id="@+id/cb_check"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:layout_marginStart="@dimen/dp_15"
            android:checked="true"
            android:background="@null"
            android:button="@drawable/checkbox_green"/>

        <ImageView
            android:id="@+id/iv_header"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            android:layout_marginStart="@dimen/dp_15"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="郭艾伦"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintTop_toTopOf="@id/iv_header"
            app:layout_constraintBottom_toBottomOf="@id/iv_header"
            app:layout_constraintStart_toEndOf="@id/iv_header"
            android:layout_marginStart="@dimen/dp_15"
            android:textColor="@color/text_color_444444"
            android:textSize="@dimen/sp_14"/>



    </LinearLayout>


</LinearLayout>