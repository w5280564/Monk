<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10"
    android:padding="@dimen/dp_15"
    android:background="@drawable/shape_background_white_radius4"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_name_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="如何快速链接圈内行家？"
        android:textColor="@color/text_color_6f6f6f"
        android:textSize="@dimen/sp_15" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_6"
        android:orientation="horizontal"
        android:gravity="center_vertical">


        <com.xunda.lib.common.view.discussionavatarview.DiscussionAvatarView
            android:id="@+id/daview"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:isLastComplete="true"
            app:isShowAnimation="true"
            app:radius="14"
            app:space="0.8"/>



        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:drawablePadding="@dimen/dp_7"
            android:drawableRight="@mipmap/icon_youjiantou"
            android:text="限时免费"
            android:textColor="@color/text_color_a1a1a1"
            android:textSize="@dimen/text_little_size" />

    </LinearLayout>




</LinearLayout>