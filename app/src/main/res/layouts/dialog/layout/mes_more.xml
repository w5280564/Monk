<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingConstraints"
    android:background="@drawable/base_gradual_top">


    <TextView
        android:id="@+id/forward_Tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_49"
        android:gravity="center"
        android:text="转发"
        android:textColor="@color/text_color_6f6f6f"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/view13"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/hui"
        app:layout_constraintTop_toBottomOf="@+id/forward_Tv" />

    <TextView
        android:id="@+id/edit_Tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_49"
        android:gravity="center"
        android:text="编辑"
        android:textColor="@color/text_color_6f6f6f"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view13" />

    <View
        android:id="@+id/view14"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/hui"
        app:layout_constraintTop_toBottomOf="@+id/edit_Tv" />

    <TextView
        android:id="@+id/dele_Tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_49"
        android:gravity="center"
        android:text="删除"
        android:textColor="@color/text_color_6f6f6f"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view14" />

    <View
        android:id="@+id/view15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/fragment_background"
        app:layout_constraintTop_toBottomOf="@+id/dele_Tv" />


    <TextView
        android:id="@+id/cancel_Tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_49"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/text_color_6f6f6f"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view15" />

</androidx.constraintlayout.widget.ConstraintLayout>