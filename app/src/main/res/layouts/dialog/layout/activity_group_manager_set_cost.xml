<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.xunda.lib.common.common.titlebar.CustomTitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        app:titleBarTitle="群管理"
        app:titleBarLeftImg="@mipmap/icon_back"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <com.xunda.lib.common.view.MyArrowItemView
            android:id="@+id/arrowItemView_cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_12"
            app:arrowItemShowDivider="false"
            app:arrowItemTitle="固定费用"/>

        <com.xunda.lib.common.view.MySwitchItemView
            android:id="@+id/free_Switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_12"
            android:background="@color/white"
            android:paddingStart="15dp"
            app:switchItemShowDivider="false"
            app:switchItemTitle="免费" />
    </LinearLayout>





</LinearLayout>