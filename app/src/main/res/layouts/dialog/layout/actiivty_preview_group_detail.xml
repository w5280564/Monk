<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:orientation="vertical">

    <com.xunda.lib.common.common.titlebar.CustomTitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        app:titleBarLeftImg="@mipmap/icon_back"
        app:titleBarShowBottomLine="false"
        app:titleBarTitle="篮球社群" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_32"
                android:background="#261F8FE5"
                android:gravity="center"
                android:text="当前为临时预览页面，审核通用过后将对外展示"
                android:textColor="@color/text_color_1F8FE5"
                android:textSize="@dimen/sp_12"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/iv_group_bag"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@color/app_main_color"
                    android:scaleType="centerCrop"
                    app:layout_constraintDimensionRatio="2.21"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_23"
                    android:layout_marginTop="@dimen/dp_29"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="篮球社群"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/iv_group_bag" />

                <TextView
                    android:id="@+id/tv_host_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_23"
                    android:layout_marginTop="@dimen/dp_5"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="群主  易建联  已运营7天"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_name" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/dp_20">

                <ImageView
                    android:id="@+id/iv_header_host"
                    android:layout_width="@dimen/dp_36"
                    android:layout_height="@dimen/dp_36"
                    android:src="@mipmap/logo_share"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_group_host_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_8"
                    android:text="易建联"
                    android:textColor="@color/text_color_444444"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/iv_header_host"
                    app:layout_constraintTop_toTopOf="@id/iv_header_host" />

                <TextView
                    android:id="@+id/tv_group_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="群主有点懒，还没有介绍他~"
                    android:textColor="@color/text_color_a1a1a1"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintBottom_toBottomOf="@id/iv_header_host"
                    app:layout_constraintStart_toStartOf="@id/tv_group_host_name" />

                <TextView
                    android:id="@+id/tv_time_online"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2小时前活跃过"
                    android:textColor="@color/text_color_1F8FE5"
                    android:textSize="@dimen/sp_10"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_group_host_name" />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:background="@color/white"
                android:padding="@dimen/dp_15">

                <TextView
                    android:id="@+id/tv_jieshao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="社群概况"
                    android:textColor="@color/text_color_444444"
                    android:textSize="@dimen/sp_14"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:lineSpacingExtra="@dimen/dp_2"
                    android:text="迷迷糊糊"
                    android:textColor="@color/text_color_a1a1a1"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintStart_toStartOf="@id/tv_jieshao"
                    app:layout_constraintTop_toBottomOf="@id/tv_jieshao" />

                <View
                    android:id="@+id/view_line1"
                    style="@style/app_line"
                    android:layout_marginTop="@dimen/dp_15"
                    app:layout_constraintStart_toStartOf="@id/tv_jieshao"
                    app:layout_constraintTop_toBottomOf="@id/tv_des" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/view_line1">

                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/dp_29">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="刚刚"
                                android:textColor="@color/text_color_1F8FE5"
                                android:textSize="@dimen/sp_14"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="最近更新"
                                android:textColor="@color/text_color_a1a1a1"
                                android:textSize="@dimen/sp_10" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="9.3K+"
                            android:textColor="@color/text_color_444444"
                            android:textSize="@dimen/sp_14" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="成员数"
                            android:textColor="@color/text_color_a1a1a1"
                            android:textSize="@dimen/sp_10" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical"
                        android:orientation="vertical"
                        android:paddingRight="@dimen/dp_29">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="9"
                                android:textColor="@color/text_color_444444"
                                android:textSize="@dimen/sp_14" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="主题数"
                                android:textColor="@color/text_color_a1a1a1"
                                android:textSize="@dimen/sp_10" />

                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_6"
                    android:text="部分主题预览"
                    android:textColor="@color/text_color_444444"
                    android:textSize="@dimen/sp_15"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/ll_container_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>

                <TextView
                    android:layout_width="195dp"
                    android:layout_height="@dimen/dp_30"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:background="@drawable/background_bg_efefef"
                    android:gravity="center"
                    android:text="加入社群后查看全部 1 条主题"
                    android:textColor="@color/text_color_a1a1a1"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_6"
                    android:text="付费须知"
                    android:textColor="@color/text_color_444444"
                    android:textSize="@dimen/sp_15" />

                <View
                    style="@style/app_line"
                    android:layout_marginTop="@dimen/dp_8" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_30"
                    android:lineSpacingExtra="@dimen/dp_2"
                    android:text="1.付费后，你可以使用当前付款的微信账号在有效期内通过网站、APP阅读内容、参与互动。\n
2.加入社群后，三天内可申请退款，超过三天后如果产生退款，需协商参见《用户协议》。\n
3.本社群由群主自行创建，付费前请确认风险，扫地僧平台不提供相关保证。若发现违法，请勿加入。\n
4.1宇宙币等于1元人民币。
                "
                    android:textColor="@color/text_color_6f6f6f"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>