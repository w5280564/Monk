    <EditText
        android:id="@+id/name_edit"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_40"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@null"
        android:hint="链接名称 如:百度"
        android:lines="1"
        android:maxLength="10"
        android:textColor="@color/text_color_a1a1a1"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/pageUrl_edit"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_40"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@null"
        android:hint="请填写你的链接 如www.baidu.com"
        android:lines="1"
        android:textColor="@color/text_color_a1a1a1"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view7" />

    <View
        android:id="@+id/view7"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_1"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@color/text_color_EFEFEF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/name_edit"
        app:layout_constraintTop_toBottomOf="@id/name_edit" />

    <View
        android:id="@+id/view8"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_1"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@color/text_color_EFEFEF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/pageUrl_edit"
        app:layout_constraintTop_toBottomOf="@id/pageUrl_edit" />


    <TextView
        android:id="@+id/tv_left"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_40"
        android:layout_weight="1"
        android:gravity="center"
        android:text="取消"
        android:layout_marginTop="@dimen/dp_50"
        android:textColor="@color/text_color_6f6f6f"
        android:textSize="@dimen/sp_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_right"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view8" />


    <TextView
        android:id="@+id/tv_right"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_40"
        android:layout_weight="1"
        android:gravity="center"
        android:text="确定"
        android:layout_marginTop="@dimen/dp_50"
        android:textColor="@color/text_color_2391F3"
        android:textSize="@dimen/sp_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_left"
        app:layout_constraintTop_toBottomOf="@id/view8" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/dp_35"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/tv_left"
        android:background="@color/new_star_bag_ji" />

    <View
        android:id="@+id/view_null"
        android:layout_width="1px"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/tv_left"
        app:layout_constraintBottom_toBottomOf="@id/tv_left"
        app:layout_constraintStart_toEndOf="@id/tv_left"
        android:background="@color/new_star_bag_ji" />



</androidx.constraintlayout.widget.ConstraintLayout>