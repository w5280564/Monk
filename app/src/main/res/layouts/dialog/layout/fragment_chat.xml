<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/text_color_EFEFEF"
    android:orientation="vertical">


    <include layout="@layout/refresh_recyclerview_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="@dimen/dp_15"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_49"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@color/white"
        >

        <LinearLayout
            android:id="@+id/ll_image"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="9dp">
            <ImageView
                android:layout_width="22dp"
                android:layout_height="20dp"
                android:src="@mipmap/tupian"/>
        </LinearLayout>

        <EditText
            android:id="@+id/et_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_29"
            android:background="@drawable/background_chat_input"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:gravity="left|center_vertical"
            android:textColor="@color/text_color_444444"
            android:textSize="@dimen/sp_13"
            android:textColorHint="@color/text_hint_color"
            android:hint="请输入聊天内容"/>

        <TextView
            android:id="@+id/tv_send"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text="发送"
            android:textColor="@color/text_color_1F8FE5"
            android:textSize="@dimen/sp_16"/>

    </LinearLayout>



</LinearLayout>