<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_15"
    android:paddingBottom="@dimen/dp_15"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:drawableLeft="@mipmap/xingqu"
            android:drawablePadding="@dimen/dp_10"
            android:text="我对这些感兴趣"
            android:textColor="@color/text_color_6f6f6f"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/interestEdit_Tv_"
            android:layout_width="@dimen/dp_67"
            android:layout_height="@dimen/dp_28"
            android:layout_marginEnd="@dimen/dp_15"
            android:drawableStart="@mipmap/bianji_pen"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dp_10"
            android:text="编辑"
            android:visibility="gone"
            android:textColor="@color/text_color_a1a1a1"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/textView7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/textView7" />

        <com.xunda.lib.common.view.flowlayout.FlowLayout
            android:id="@+id/interest_Flow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_42"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <View
            android:id="@+id/label_Line"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_13"
            android:background="@drawable/background_bg_efefef"
            app:layout_constraintEnd_toEndOf="@+id/interest_Flow"
            app:layout_constraintStart_toStartOf="@id/interest_Flow"
            app:layout_constraintTop_toBottomOf="@id/interest_Flow" />


        <com.qingbo.monk.base.baseview.MyCardEditView
            android:id="@+id/good_EditView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            app:ShowLine="true"
            app:ShowEditTv="false"
            app:cardContent="暂未填写"
            app:cardContentColor="@color/text_color_a1a1a1"
            app:cardContentSize="14sp"
            app:cardDrawStartImg="@mipmap/shanchang"
            app:cardTitle="擅长领域/方向"
            app:cardTitleColor="@color/text_color_6f6f6f"
            app:cardTitleSize="15sp"
            app:layout_constraintTop_toBottomOf="@+id/label_Line" />

        <com.qingbo.monk.base.baseview.MyCardEditView
            android:id="@+id/resources_EditView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            app:ShowLine="true"
            app:ShowEditTv="false"
            app:cardContent="暂未填写"
            app:cardContentColor="@color/text_color_a1a1a1"
            app:cardContentSize="14sp"
            app:cardDrawStartImg="@mipmap/ziyuan"
            app:cardTitle="可以提供什么资源/可以问我"
            app:cardTitleColor="@color/text_color_6f6f6f"
            app:cardTitleSize="15sp"
            app:layout_constraintTop_toBottomOf="@+id/good_EditView" />

        <com.qingbo.monk.base.baseview.MyCardEditView
            android:id="@+id/achievement_EditView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            app:ShowLine="true"
            app:ShowEditTv="false"
            app:cardContent="暂未填写"
            app:cardContentColor="@color/text_color_a1a1a1"
            app:cardContentSize="14sp"
            app:cardDrawStartImg="@mipmap/yanjiu"
            app:cardTitle="最有成就感的事"
            app:cardTitleColor="@color/text_color_6f6f6f"
            app:cardTitleSize="15sp"
            app:layout_constraintTop_toBottomOf="@+id/resources_EditView" />

        <com.qingbo.monk.base.baseview.MyCardEditView
            android:id="@+id/learn_EditView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            app:ShowLine="true"
            app:ShowEditTv="false"
            app:cardContent="暂未填写"
            app:cardContentColor="@color/text_color_a1a1a1"
            app:cardContentSize="14sp"
            app:cardDrawStartImg="@mipmap/xuexi"
            app:cardTitle="最近在学习/研究的方向"
            app:cardTitleColor="@color/text_color_6f6f6f"
            app:cardTitleSize="15sp"
            app:layout_constraintTop_toBottomOf="@+id/achievement_EditView" />

        <com.qingbo.monk.base.baseview.MyCardEditView
            android:id="@+id/harvest_EditView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            app:ShowLine="true"
            app:ShowEditTv="false"
            app:cardContent="暂未填写"
            app:cardContentColor="@color/text_color_a1a1a1"
            app:cardContentSize="14sp"
            app:cardDrawStartImg="@mipmap/shouhuo"
            app:cardTitle="希望收获什么/需求资源"
            app:cardTitleColor="@color/text_color_6f6f6f"
            app:cardTitleSize="15sp"
            app:layout_constraintTop_toBottomOf="@+id/learn_EditView" />

</androidx.constraintlayout.widget.ConstraintLayout>