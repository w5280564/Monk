<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="@dimen/dp_15">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@drawable/shape_background_white_radius12"
       android:orientation="vertical"
       android:gravity="center_horizontal">

       <ImageView
           android:id="@+id/iv_header"
           android:layout_width="@dimen/dp_36"
           android:layout_height="@dimen/dp_36"
           android:layout_marginTop="@dimen/dp_12"/>

       <TextView
           android:id="@+id/tv_name"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="@dimen/dp_5"
           android:text="郭艾伦"
           android:ellipsize="end"
           android:maxLines="1"
           android:textColor="@color/text_color_444444"
           android:textSize="@dimen/sp_14"/>

       <TextView
           android:id="@+id/tv_join_time"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="@dimen/dp_5"
           android:text="2021/11/13加入"
           android:textColor="@color/text_color_a1a1a1"
           android:textSize="@dimen/sp_10"/>

       <View style="@style/app_line"
           android:layout_marginTop="@dimen/dp_13"/>

       <TextView
           android:id="@+id/tv_submit"
           android:layout_width="match_parent"
           android:layout_height="@dimen/dp_44"
           android:background="@drawable/background_white_shape"
           android:gravity="center"
           android:textSize="@dimen/sp_16"
           android:textColor="@color/text_color_1F8FE5"
           android:textStyle="bold"
           android:text="设置成管理员"/>

   </LinearLayout>

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:background="@drawable/shape_background_white_radius12"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/text_color_1F8FE5"
        android:text="取消"/>

</LinearLayout>