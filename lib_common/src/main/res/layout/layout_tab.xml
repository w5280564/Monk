<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/dp_39"
    tools:ignore="MissingConstraints">


    <View
        android:id="@+id/line"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_4"
        android:background="@color/app_main_color"
        app:layout_constraintStart_toStartOf="@+id/tab_item_textview"
        app:layout_constraintEnd_toEndOf="@id/tab_item_textview"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="invisible"
        android:layout_marginTop="@dimen/dp_28"/>

    <TextView
        android:id="@+id/tab_item_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_13"
        android:textColor="@color/text_color_6f6f6f"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/unread_msg_Tv"
        android:layout_width="@dimen/dp_5"
        android:layout_height="@dimen/dp_5"
        app:layout_constraintTop_toTopOf="@id/tab_item_textview"
        app:layout_constraintStart_toEndOf="@id/tab_item_textview"
        android:layout_marginStart="@dimen/dp_5"
        android:background="@drawable/shape_no_read_point"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_10"
        android:visibility="gone"
        android:gravity="center"/>


</androidx.constraintlayout.widget.ConstraintLayout>