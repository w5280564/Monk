<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Con_parent"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_130"
    android:background="@drawable/layout_shape_dialog"
    app:layout_constraintBottom_toBottomOf="parent">

    <TextView
        android:id="@+id/content_Tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_15"
        android:text="退出登录/关闭"
        android:textColor="@color/text_color_a1a1a1"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/text_color_EFEFEF"
        app:layout_constraintBottom_toBottomOf="@id/content_Tv"/>

    <TextView
        android:id="@+id/close_Tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_15"
        android:text="关闭鹅先知"
        android:textColor="@color/text_color_6f6f6f"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/content_Tv"
        app:layout_constraintTop_toBottomOf="@+id/content_Tv" />

    <TextView
        android:id="@+id/quit_Tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_15"
        android:text="退出登录"
        android:textStyle="bold"
        android:textColor="@color/text_color_6f6f6f"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@+id/close_Tv" />

</androidx.constraintlayout.widget.ConstraintLayout>