<resources>

    <style name="AppTheme.Base" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
    </style>


    <style name="BaseAppTheme" parent="AppTheme.Base"> </style>


    <style name="Widget" />

    <!-- fragment statusbar样式 -->
    <style name="Widget.stabarview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/statusbar_view_height</item>
        <item name="android:background">@color/white</item>
    </style>

    <!-- Editview样式 -->
    <style name="Widget.EditViewStyle">
        <item name="android:textSize">@dimen/hint_size</item>
        <item name="android:textColorHint">@color/text_hint_color</item>
        <item name="android:textColor">@color/text_main_color</item>
    </style>


    <!-- 大圆角Button样式 -->
    <style name="Widget.ButtonStyleRound">
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:background">@drawable/selector_btn_round</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- 小圆角Button样式 -->
    <style name="Widget.ButtonStyleRectangle">
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:background">@drawable/selector_btn_rectangle</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- LoginButtonStyle -->
    <style name="Widget.LoginButtonStyle">
        <item name="android:textSize">@dimen/dp_18</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- 右上角popupwindow -->
    <style name="AnimationPreview">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>



    <!-- 加载时小人动画的样式 -->
    <style name="loadingStyle">

        <!-- 背景透明 -->
        <item name="android:windowBackground">@color/transparent</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 这行代码不能少 -->
        <item name="android:windowContentOverlay">@null</item>
        <!-- 动画 -->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <!-- 模糊 设为true的话背景就是黑色透明的 -->
        <item name="android:backgroundDimEnabled">false</item>
    </style>


    <!--加载框-->
    <declare-styleable name="ProgressWheel">
        <attr name="matProg_progressIndeterminate" format="boolean" />
        <attr name="matProg_barColor" format="color" />
        <attr name="matProg_rimColor" format="color" />
        <attr name="matProg_rimWidth" format="dimension" />
        <attr name="matProg_spinSpeed" format="float" />
        <attr name="matProg_barSpinCycleTime" format="integer" />
        <attr name="matProg_circleRadius" format="dimension" />
        <attr name="matProg_fillRadius" format="boolean" />
        <attr name="matProg_barWidth" format="dimension" />
        <attr name="matProg_linearProgress" format="boolean" />
    </declare-styleable>


    <!-- 中间对话框样式 -->
    <style name="CenterDialogStyle">

        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 这行代码不能少 -->
        <item name="android:windowContentOverlay">@null</item>
        <!-- 动画 -->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>


    <!-- 中间对话框样式 -->
    <style name="CenterDialogStylePay">

        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 这行代码不能少 -->
        <item name="android:windowContentOverlay">@null</item>
        <!-- 动画 -->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">stateAlwaysVisible</item>
    </style>


    <!-- 底部对话框样式 -->
    <style name="bottomrDialogStyle">

        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 全屏 -->
        <item name="android:windowFullscreen">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 动画 -->
        <item name="android:windowAnimationStyle">@style/AnimalBottom</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>




    <!-- 底部dialog弹出进出动画 -->
    <style name="AnimalBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>




    <!-- 标题横向分割线 -->
    <style name="title_line_transverse">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/title_line</item>
    </style>



    <!-- 白底上统一横向分割线 -->
    <style name="app_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/app_line</item>
    </style>



    <!-- 主题色的垂直线条 -->
    <style name="app_line_vertical">
        <item name="android:layout_width">3dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/app_main_color</item>
    </style>


    <!-- tabLayout导航栏样式 -->
    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/app_main_color</item>
    </style>




    <!-- tabLayout导航栏样式 -->
    <style name="MyTabLayoutTextAppearance16" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/text_color_444444</item>
    </style>



    <!-- 白橙非全屏Button样式 -->
    <style name="Widget.ButtonStyleWhite">
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/app_main_color</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SwitchButtonStyle">
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>



    <style name="RadiobuttonStyle">
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:button">@null</item>
    </style>


    <style name="BlackActivityTheme" parent="android:Theme.Black">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="PlayerAnimation" parent="android:Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/anim_slice_in_right</item>
        <item name="android:activityCloseExitAnimation">@anim/anim_slice_out_right</item>
    </style>


    <!-- Input dialog theme. -->
    <style name="InputDialog">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 全屏 -->
        <item name="android:windowFullscreen">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">#00000000</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 动画 -->
        <item name="android:windowAnimationStyle">@style/AnimalBottom</item>
        <item name="android:windowSoftInputMode">stateAlwaysVisible</item>
    </style>


    <style name="NormalDialog" parent="Theme.AppCompat.Light.Dialog.Alert" >
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>

    </style>


    <style name="BottomDialog" parent="AppTheme.Base" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>




    <style name="AppTheme.Toolbar" parent="Widget.AppCompat.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>



    <style name="SplashTheme" parent="BaseAppTheme">
        <item name="android:windowBackground">@drawable/background_begin</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="selectorGoodsListText">
        <item name="android:textColor">@drawable/text_goods_list_color</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="tabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextColor">@color/text_color_666666</item>
        <item name="rippleColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="tabSelectedTextColor">@color/app_main_color</item>
        <item name="tabIndicator">@null</item>
        <item name="tabIndicatorColor">@color/transparent</item>
        <item name="tabMode">fixed</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="android:textStyle">bold</item>
        <item name="tabBackground">@null</item>
        <item name="tabRippleColor">@null</item>
    </style>

     <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="CommProgressDialog" parent="@style/CustomDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="radio_button_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="tab_item_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
    </style>

